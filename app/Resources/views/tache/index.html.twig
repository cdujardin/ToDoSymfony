{% extends 'base.html.twig' %}

{% block body %}


    <!-- Button add task-->
    <div class="container">
      <div class="row add">
        <h1 class="title">To Do </h1>
        <a href="{{ path('tache_new') }}">
          <div class="col-xs-12 ">
            <button type="button" class="btn btn-default btnadd">
              <img class="addimg" src="{{ asset('img/add.png') }}" alt="add"/>
              <p class="addp">Add a task</p>
            </button>
          </div>
        </a>
      </div>
    </div>

    <!-- Task -->
    <div class="container">
      <div class="row tache">
        {% for tache in taches %}
        <div class="col-xs-9">
          <p class="name">{{ tache.nom }}</p>
          <p class="details">{{ tache.details }}</p>
        </div>
        <div class="col-xs-2">
          <a href="{{ path('tache_edit', { 'id': tache.id }) }}"><img src="{{ asset('img/modify.png') }}" alt="modifier"/></a>
          <a href="{{ path('tache_show', { 'id': tache.id }) }}"><img src="{{ asset('img/view.png') }}" alt="En savoir plus"/></a>
        </div>
        {% endfor %}
      </div>
    </div>

{% endblock %}
