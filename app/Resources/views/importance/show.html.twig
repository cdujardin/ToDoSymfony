{% extends 'base.html.twig' %}

{% block body %}

<h1 class="title">Importance "{{ importance.nom }}"</h1>


<div class="container">
  <div class="row tache">
    <div class="col-xs-9">
      <p>id : {{ importance.id }}</p>
      <p>Nom : {{ importance.nom }}</p>
      <p>Poids : {{ importance.poids }}</p>
    </div>
    <div class="col-xs-3 icon">
      <a href="{{ path('importance_index') }}"><img src="{{ asset('img/return.png') }}" alt="Retour"/></a>
